# =============================================================================
# SHARED ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill in your actual values
# =============================================================================

# Common Authentication
BASIC_AUTH_USER=nirvana
BASIC_AUTH_PASS=your-basic-auth-password

# Domain Configuration (used by both nginx and backend)
DOMAIN=your-domain.com
NIR_ALLOWED_ORIGINS=localhost,your-domain.com,www.your-domain.com

# Database Credentials (used by backend and nginx orchestration)
POSTGRES_USER=nirvana
POSTGRES_DB=nirvana
POSTGRES_PASSWORD=your-postgres-password

# API Keys (replace with your actual keys)
EODHD_API_KEY=your-eodhd-api-key
OPENAI_API_KEY=your-openai-api-key

# License
NVAR_LICENSE=DEV

# SSL Certificate Configuration
CERTBOT_EMAIL=admin@your-domain.com

# Backend and Frontend Service Configuration
# For development mode (using dev services)
BACKEND_HOST=nirvana_backend
BACKEND_PORT=8000
FRONTEND_HOST_DEV=nirvana_website_dev
FRONTEND_PORT_DEV=5173

# For production mode (using prod services)  
FRONTEND_HOST_PROD=nirvana_website
FRONTEND_PORT_PROD=80

# Environment Mode (development/production)
# Change this to switch between modes
NIRVANA_MODE=development

# Network fallback hosts (if services not in network)
BACKEND_FALLBACK_HOST=host.docker.internal
FRONTEND_FALLBACK_HOST=host.docker.internal
